<project>
	<modelVersion>4.0.0</modelVersion>
	<groupId>sgit</groupId>
	<artifactId>winstone-embed</artifactId>
	<version>1.0-SNAPSHOT</version>
	<packaging>war</packaging>
	<dependencies>
		<dependency>
			<groupId>sgit</groupId>
			<artifactId>sgit</artifactId>
			<version>1.0-SNAPSHOT</version>
			<type>war</type>
		</dependency>
		<dependency>
			<groupId>sgit</groupId>
			<artifactId>sgit</artifactId>
			<version>1.0-SNAPSHOT</version>
			<classifier>classes</classifier>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>javax.servlet</groupId>
			<artifactId>servlet-api</artifactId>
			<version>[2.5,)</version>
			<scope>provided</scope>
		</dependency>			
	</dependencies>	
	<build>
		<plugins>
			<plugin>
				<groupId>net.sf.alchim</groupId>
				<artifactId>winstone-maven-plugin</artifactId>
				<version>1.2</version>
				<executions>
					<execution>
						<goals><goal>embed</goal></goals>
						<phase>package</phase>
					</execution>
				</executions>				
				<configuration>
					<cmdLineOptions>
						<property>
							<name>useJasper</name>
							<value>true</value>
						</property>
					</cmdLineOptions>
				</configuration>
			</plugin>							
			<plugin>				
				<artifactId>maven-install-plugin</artifactId>
				<version>2.3.1</version>
				<executions>
					<execution>
						<goals><goal>install-file</goal></goals>
						<phase>install</phase>
						<configuration>
							<groupId>${project.groupId}</groupId>
							<artifactId>${project.artifactId}</artifactId>
							<version>${project.version}</version>
							<classifier>embed</classifier>													
							<packaging>jar</packaging>
							<file>${project.build.directory}/${project.build.finalName}-standalone.jar</file>
						</configuration>
					</execution>
				</executions>
			</plugin>							
		</plugins>
	</build>
</project>